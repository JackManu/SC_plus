<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    tools:context="com.jackmanu.scplusplus.CompositionSetUp"
    android:background="@color/lightgrey"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageButton android:id="@+id/sixteenths"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:textAllCaps="false"
            android:background="@drawable/button_state"
            android:layout_toLeftOf="@+id/centerPoint"
            android:layout_alignParentLeft="true"
            android:src="@drawable/sixteenths"
            android:onClick="setRhythmicPattern"/>
    <TextView
        android:id="@+id/centerPoint"
        android:text=""
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />
    <ImageButton
            android:id="@+id/quintuplets"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:layout_toRightOf="@id/centerPoint"
            android:layout_alignParentRight="true"
            android:textAllCaps="false"
            android:background="@drawable/button_state"
            android:src="@drawable/quintuplets"
            android:onClick="setRhythmicPattern"/>
    <TextView
        android:id="@+id/centerPoint2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/centerPoint"
        android:layout_centerHorizontal="true" />
    <ImageButton android:id="@+id/sixteenthNoteTriplets"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:textAllCaps="false"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/centerPoint2"
            android:layout_below="@id/sixteenths"
            android:background="@drawable/button_state"
            android:src="@drawable/sixteenthtriplets"
            android:onClick="setRhythmicPattern"/>
    <ImageButton android:id="@+id/septuplets"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:textAllCaps="false"
            android:layout_below="@id/quintuplets"
            android:layout_toRightOf="@id/centerPoint2"
            android:background="@drawable/button_state"
            android:layout_alignParentRight="true"
            android:src="@drawable/septuplets"
            android:onClick="setRhythmicPattern"/>
    <androidx.appcompat.widget.AppCompatButton
        style="@style/MainButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sixteenthNoteTriplets"
        android:id="@+id/clearRhythmicPattern"
        android:text="@string/clear"
        android:background="@drawable/button_state"
        android:onClick="clearRhythmicPattern"/>
    <TextView
        android:id="@+id/rhythmicPatternText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/clearRhythmicPattern"
        android:layout_toEndOf="@id/clearRhythmicPattern"
        android:layout_below="@id/septuplets"
        android:textColor="@color/black"/>
      </RelativeLayout>
    </ScrollView>
</RelativeLayout>