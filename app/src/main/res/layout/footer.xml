<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/white"
    android:paddingStart="8dp"
    android:paddingEnd="8dp">

    <!-- 1. App Icon ImageView: No weight. Takes up only its natural space. -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:src="@mipmap/ic_launcher_round" />
    <TextView
        android:id="@+id/pdfFooterText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/flavor_app_name"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/black"/>

    <!-- 3. Google Play ImageView: No weight. Takes up only its natural space. -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/android_app_on_google_play" />
</LinearLayout>
