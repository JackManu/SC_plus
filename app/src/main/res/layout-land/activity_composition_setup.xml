<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jackmanu.scplusplus.CompositionSetUp">

    <!-- Toolbar remains at the top -->
    <!-- Toolbar remains at the top -->
    <!-- Toolbar remains at the top -->
    <include
        android:id="@+id/toolbar_layout"
        layout="@layout/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />



    <!-- This LinearLayout holds the buttons on the left side -->
    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@id/toolbar_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:background="@color/picture_color">

        <androidx.appcompat.widget.AppCompatButton
            style="@style/MainButtonStyle"
            android:id="@+id/timeSignature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="selectFrag"
            android:text="@string/timesignatures" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/MainButtonStyle"
            android:id="@+id/rhythmicPattern"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="selectFrag"
            android:text="@string/rhythmicpatterns" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/MainButtonStyle"
            android:id="@+id/stickingPreferences"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="selectFrag"
            android:text="@string/stickingpreferences"/>

        <androidx.appcompat.widget.AppCompatButton
            style="@style/MainButtonStyle"
            android:id="@+id/generateAndPlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="generateAndPlay"
            android:text="@string/generateandplay"/>

    </LinearLayout>

    <!-- A guideline to separate the buttons from the fragment -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <!--
    THIS IS THE CRITICAL PART.
    The FrameLayout for the fragment now exists on the right side.
    -->
    <FrameLayout
        android:id="@+id/compFragment"
        android:name="com.example.doug.stickcontrolrandomizer.EmptyFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout="@layout/empty" />


</androidx.constraintlayout.widget.ConstraintLayout>
