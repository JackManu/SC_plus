<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jackmanu.scplusplus.MainActivity">
    <ImageView
        android:layout_width="25dp"
        android:id="@+id/leftBorder"
        android:layout_height="match_parent"
        android:background="@color/darkgrey"
        android:layout_alignParentStart="true"
        android:contentDescription="@null"/>
    <ImageView
        android:layout_width="25dp"
        android:id="@+id/rightBorder"
        android:layout_height="match_parent"
        android:background="@color/darkgrey"
        android:layout_alignParentEnd="true"
        android:contentDescription="@null"/>
    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/topBorder"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:background="@color/darkgrey"
        android:layout_toEndOf="@id/leftBorder"
        android:layout_toStartOf="@id/rightBorder"
        android:layout_alignParentTop="true"
        android:contentDescription="@null"/>
    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/bottomBorder"
        android:layout_height="25dp"
        android:background="@color/darkgrey"
        android:layout_toEndOf="@id/leftBorder"
        android:layout_toStartOf="@id/rightBorder"
        android:layout_alignParentBottom="true"
        android:contentDescription="@null"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:id="@+id/appTitle"
        android:layout_below="@id/topBorder"
        android:layout_toEndOf="@id/leftBorder"
        android:layout_toStartOf="@id/rightBorder"
        android:singleLine="true"
        android:gravity="center"
        android:textSize="55sp"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:contentDescription="@null"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@id/appTitle"
        android:layout_above="@id/bottomBorder"
        android:layout_toEndOf="@id/leftBorder"
        android:layout_toStartOf="@id/rightBorder"
        android:weightSum="2">
    <ImageView
        android:id="@+id/drummer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/drummer"
        android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appTitle"
            android:layout_above="@id/bottomBorder"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="3"
            android:layout_toStartOf="@id/rightBorder">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/generateComposition"
                style="@style/MainButtonStyle"
                android:text="@string/intronew"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/playSavedComposition"
                style="@style/MainButtonStyle"
                android:layout_weight="1"
                android:text="@string/introsaved"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/about"
                style="@style/MainButtonStyle"
                android:onClick="about"
                android:layout_weight="1"
                android:text="@string/introabout"/>
        </LinearLayout>
    </LinearLayout>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignWithParentIfMissing="true"
        android:visibility="visible"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_homepaget"/>
</RelativeLayout>
