<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jackmanu.scplusplus.CompositionSetUp">

    <include
        android:id="@+id/toolbar_layout"
        layout="@layout/toolbar_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible"
        ads:adSize="FULL_BANNER"
        ads:adUnitId="@string/banner_setupt"/>

    <ScrollView
        android:id="@+id/button_container_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/compFragment"
        app:layout_constraintBottom_toTopOf="@id/adView"
        android:fillViewport="true">

        <!-- FIX #1: The height of this LinearLayout must be "match_parent"
             so it can fill the ScrollView and distribute its space. -->
        <LinearLayout
            android:id="@+id/button_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/picture_color">

            <!-- FIX #2: All button heights must be "0dp" for layout_weight to work.
                 The minHeight attribute is also removed as it's no longer needed. -->
            <androidx.appcompat.widget.AppCompatButton
                style="@style/MainButtonStyle"
                android:id="@+id/timeSignature"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/timesignatures" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/MainButtonStyle"
                android:id="@+id/rhythmicPattern"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/rhythmicpatterns" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/MainButtonStyle"
                android:id="@+id/stickingPreferences"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/stickingpreferences"/>

            <androidx.appcompat.widget.AppCompatButton
                style="@style/MainButtonStyle"
                android:id="@+id/generateAndPlay"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/generateandplay"
                android:background="@drawable/button_generate_state"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </ScrollView>

    <!-- The FrameLayout for the fragment remains the same -->
    <FrameLayout
        android:id="@+id/compFragment"
        android:name="com.example.doug.stickcontrolrandomizer.EmptyFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/picture_color"
        app:layout_constraintStart_toEndOf="@id/button_container_scroll"
        app:layout_constraintBottom_toTopOf="@id/adView"
        app:layout_constraintTop_toBottomOf="@id/toolbar_layout"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout="@layout/empty" />

</androidx.constraintlayout.widget.ConstraintLayout>

